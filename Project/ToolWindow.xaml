<Window x:Class="Project.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Height="850"
        Width="1390"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        MouseLeftButtonDown="LeftBtnMousePositionWindow">

    <Grid>
        <Border CornerRadius="9"
                Margin="15" Background="#FFBEDBEC"
                >


            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                                  Direction="-90"
                                  RenderingBias="Quality"
                                  ShadowDepth="2"/>
            </Border.Effect>
        </Border>

        <Grid Margin="15">

            <Grid.RowDefinitions>

                <RowDefinition Height="14*"/>
                <RowDefinition Height="191*"/>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Menu Style="{DynamicResource MenuStyle}" 
                      Background="#2d2e34"
                      Foreground="#c2c3c6"
                      FontFamily="Fonts/#gg sans Regular.ttf"
                      FontSize="16"
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left" Margin="8,0,0,0" Height="45">


                    <MenuItem Header="Распределение нагрузки"
                              Click="BtnLoadDistribution" Height="45"/>

                    <MenuItem Header="Отчёты"
                              Click="BtnReports" Height="45"/>

                    <MenuItem Header="Мониторинг"
                              Click="BtnMonitoring" Height="45"/>

                    <MenuItem Header="Закрыть расчёт штатов"
                              Click="BtnCloseCalculationStates" Height="45"/>

                    <MenuItem Header="Таблицы базы данных" Height="45">

                        <MenuItem Header="Степени"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnDegrees"/>

                        <MenuItem Header="Должности"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnPosition"/>

                        <MenuItem Header="Совместительство"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnCompatibility"/>

                        <MenuItem Header="ПЦК"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnPCK"/>

                        <MenuItem Header="Пользователи"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnUsers"/>

                        <MenuItem Header="Преподаватели"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnTeachers"/>

                        <MenuItem Header="Таблица доступа"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnTable_Access"/>

                        <MenuItem Header="Фактическая нагрузка"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnActual_Load"/>

                        <MenuItem Header="Дисциплины"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnDisciplines"/>

                        <MenuItem Header="Нагрузка по УП"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnLoad_po_UP"/>

                        <MenuItem Header="Группы"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnGroups"/>

                        <MenuItem Header="Циклы дисциплины"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnCycles_Discipline"/>

                        <MenuItem Header="УП"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnUP"/>

                        <MenuItem Header="Группа - УГ"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnGroup_UG"/>

                        <MenuItem Header="Специальности"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnSpecialties"/>

                        <MenuItem Header="Учебные годы"
                                  Height="45"
                                  Background="#FF2D2E34"
                                  Click="BtnYears_Academic"/>



                    </MenuItem>

                </Menu>

            </Grid>

            <Grid Grid.Row="1">

                <Frame x:Name="GeneralFrame" 
                       NavigationUIVisibility="Hidden" 
                       Margin="0,0,0,15"/>

            </Grid>

        </Grid>

    </Grid>
</Window>